#:kivy 2.2.1

ScreenManager:
    FirstScreen:
        name: 'first'
    SecondScreen:
        name: 'second'

# Custom menu item
<ItemDropdown>:
    size_hint_y: None
    height: dp(48)

    MDLabel:
        text: root.text
        theme_text_color: 'Primary'

<FirstScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20  # Padding for the entire screen
        font_size: 100
        

        # Template buttons in the center
        BoxLayout:
            size_hint_y: None
            height: dp(48)
            padding: 10  # Padding inside the button layout
            BoxLayout:
                size_hint_x: None
                width: self.parent.width
                spacing: 200
                halign: 'center'

                # Spacer on the left
                Widget:
                    size_hint_x: 1

                MDFlatButton:
                    text: "Fantasy"
                    on_press: root.select_button(self)
                    on_release: root.set_fantasy_template()
                    size_hint_x: None
                    width: dp(130)
                    md_bg_color: app.theme_cls.bg_normal

                MDFlatButton:
                    text: "Mundane"
                    on_press: root.select_button(self)
                    on_release: root.set_mundane_template()
                    size_hint_x: None
                    width: dp(130)
                    md_bg_color: app.theme_cls.bg_normal

                # Spacer on the right
                Widget:
                    size_hint_x: 1

        # Template and Inputs Layout (Initially invisible and disabled)
        BoxLayout:
            id: template_and_inputs_layout
            orientation: 'vertical'
            opacity: 0
            disabled: True

            # Input fields
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

                MDTextField:
                    id: input1
                    hint_text: "Fictional character (video game/movie/tv show)"
                    on_text: root.update_text()
                    size_hint_x: None
                    width: self.parent.width - dp(20)

                MDTextField:
                    id: input2
                    hint_text: "Quirky trait / Superpower / Ability"
                    on_text: root.update_text()
                    size_hint_x: None
                    width: self.parent.width - dp(20)
                MDTextField:
                    id: input3
                    hint_text: "Mundane task / Quest / Awkward situation"
                    on_text: root.update_text()
                    size_hint_x: None
                    width: self.parent.width - dp(20)
                MDTextField:
                    id: input4
                    hint_text: "Unexpected twist"
                    on_text: root.update_text()
                    size_hint_x: None
                    width: self.parent.width - dp(20)
                MDTextField:
                    id: input5
                    hint_text: "Tone in which you want it to respond to you"
                    on_text: root.update_text()
                    size_hint_x: None
                    width: self.parent.width - dp(20)

            # View Generated Storyline Button
            MDFlatButton:
                text: "View Generated Storyline"
                on_press: root.temporary_color_change(self, True)
                on_release: root.temporary_color_change(self, False)
                on_release: root.toggle_storyline_visibility()
                size_hint_y: None
                height: dp(48)
                padding: 20
                pos_hint: {'center_x': .5}
                md_bg_color: app.theme_cls.primary_color
                    
            # Big text box
            MDLabel:
                id: big_text
                text: ""
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                font_style: 'Body1'
                font_size: '14sp'  # Adjust font size to typical paragraph size
                line_height: 1.5  # Adjust line height for better readability
                padding: 50,5,5,10
                opacity: 0  # Initially invisible
                disabled: True  # Initially disabled

            
            # Confirm button
            MDFlatButton:
                text: "Confirm"
                on_press: root.temporary_color_change(self, True)
                on_release: root.temporary_color_change(self, False)
                on_release: app.switch_to_second()
                size_hint_y: None
                height: dp(48)
                padding: 20
                pos_hint: {'center_x': .5}
                md_bg_color: app.theme_cls.primary_color


<SecondScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        size_hint_y: 1
        padding: 20

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2  # Allocate 20% of the screen to the top part

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                size_hint_y: None
                height: dp(100)
                pos_hint: {'center_x': 0.5, 'center_y': 0.25}

                MDRaisedButton:
                    id: input_device_button
                    text: "Select Input Device"
                    on_release: root.input_device_menu.open()
                    size_hint_x: None
                    width: dp(200)

                MDRaisedButton:
                    id: output_device_button
                    text: "Select Output Device"
                    on_release: root.output_device_menu.open()
                    size_hint_x: None
                    width: dp(200)

                MDRaisedButton:
                    id: voice_button
                    text: "Select Voice"
                    on_release: root.voice_menu.open()
                    size_hint_x: None
                    width: dp(200)

            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                size_hint_y: None
                height: dp(100)
                pos_hint: {'center_x': 0.5}

                MDIconButton:
                    id: record_button
                    icon: "microphone"
                    user_font_size: "64sp"
                    md_bg_color: app.theme_cls.primary_color if not root.record else app.theme_cls.accent_color
                    on_release: root.toggle_recording()
                    size_hint: None, None
                    size: dp(64), dp(64)
                    pos_hint: {'center_x': 0.5}

                MDLabel:
                    id: recording_text
                    text: "Press to Record"
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    font_style: 'Body1'
                    font_size: '14sp'

        ScrollView:
            size_hint_y: 0.75  # Allocate 65% of the screen to the bottom part

            MDTextField:
                id: transcription_text
                text: ""
                readonly: True
                multiline: True
                size_hint_y: None
                height: self.minimum_height

    MDRaisedButton:
        text: "Restart"
        on_release: app.switch_to_first()
        size_hint_y: None
        height: dp(48)
        pos_hint: {'center_x': 0.5}
